<UserControl x:Class="MCDStorageChest.Controls.ItemPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:MCDStorageChest.Controls"
             xmlns:profile="clr-namespace:MCDStorageChest.Save.Profiles"
             xmlns:itempreview="clr-namespace:MCDStorageChest.Controls.ItemViews"
             xmlns:mappings="clr-namespace:MCDStorageChest.Save.Mapping"
             xmlns:converters="clr-namespace:MCDStorageChest.Save.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=profile:Item}"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NullVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Visibility="{Binding ., FallbackValue=False, TargetNullValue=False, Converter={StaticResource NullToVisibilityConverter}}">
        <ScrollViewer>
            <StackPanel>
                <itempreview:ItemHeader Height="100" DataContext="{Binding .}"></itempreview:ItemHeader>
                <itempreview:ItemGildedPanel MinHeight="40" DataContext="{Binding .}"></itempreview:ItemGildedPanel>
                <itempreview:ItemArmorPropertiesList MinHeight="40" DataContext="{Binding .}"></itempreview:ItemArmorPropertiesList>
                <itempreview:ItemEnchantmentPanel DataContext="{Binding .}"></itempreview:ItemEnchantmentPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
